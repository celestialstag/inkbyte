{
  "name": "@package/api",
  "version": "0.0.1",
  "license": "GPL-3.0",
  "description": "back-end for application",
  "author": "Elias Mawa <elias@emawa.io>",
  "private": true,
  "main": "dist/cjs/index.js",
  "homepage": "https://github.com/celestialstag/inkbyte",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celestialstag/inkbyte.git"
  },
  "scripts": {
    "test": "jest",
    "lint": "echo 'linting @lib/api' && eslint . --ext .js,.ts",
    "prettier": "yarn prettier --write",
    "clean": "echo 'clean @lib/api' && rm -rf ./dist** ||:",
    "watch": "echo 'watching @lib/api' && nodemon --watch './src' --watch '../../lib' -e ts,tsx,js --delay 20ms --exec yarn serve",
    "serve": "echo 'serving @package/api' && ts-node ./src/server.ts",
    "build": "NODE_ENV=production && yarn build:cjs",
    "build:cjs": "NODE_ENV=production && echo 'building @lib/api:cjs' && yarn tsc",
    "start": "NODE_ENV=production && echo 'starting @package/api' && node ./dist/cjs/server.js"
  },
  "bugs": {
    "url": "https://github.com/celestialstag/inkbyte/issues"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@lib/config": "~0.0.1",
    "@lib/schema-validator": "~0.0.1",
    "@lib/services": "~0.0.1",
    "@lib/shared": "~0.0.1",
    "@lib/utility": "~0.0.1",
    "date-fns": "~2.28.0",
    "date-fns-tz": "~1.3.6",
    "formidable": "~2.1.1",
    "koa": "~2.14.2",
    "koa-body": "~6.0.1",
    "koa-bodyparser": "~4.4.0",
    "koa-json": "~2.0.2",
    "koa-jwt": "~4.0.3",
    "koa-logger": "~3.2.1",
    "koa-router": "~12.0.0",
    "koa-session": "~6.2.0",
    "koa-websocket": "~7.0.0",
    "meilisearch": "~0.32.3"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "~5.0.0",
    "@rollup/plugin-node-resolve": "~15.0.1",
    "@rollup/plugin-terser": "~0.4.1",
    "@rollup/plugin-typescript": "~10.0.1",
    "@types/formidable": "~2.0.6",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa-session": "^5.10.4",
    "@types/koa-websocket": "^5.0.7",
    "@types/koa__cors": "^3.0.3",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "rollup": "~3.10.0",
    "rollup-plugin-dts": "~5.3.0",
    "ts-node": "~10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "~4.9.4"
  }
}
